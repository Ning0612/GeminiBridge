# Server Configuration
PORT=11434
HOST=127.0.0.1

# Security
BEARER_TOKEN=your-secret-token-here

# Gemini CLI Configuration
# Note: CLI path is hard-coded to 'gemini' for security and compatibility
# Using custom paths can cause incorrect response content
GEMINI_CLI_TIMEOUT=60000

# Model Mappings (JSON format)
# See config/models.json for configuration

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=7

# Debug Mode (set to true only in development)
DEBUG=false

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000